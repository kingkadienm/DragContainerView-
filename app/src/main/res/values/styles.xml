<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DragSortDialog">
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DialogAnim">
        <item name="android:windowEnterAnimation">@anim/lib_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/lib_dialog_exit</item>
    </style>

</resources>
